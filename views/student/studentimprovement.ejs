<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Share Your Contents</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        header {
            background-color: #3498db;
            color: #fff;
            text-align: center;
            padding: 20px;
        }

        h1 {
            font-size: 36px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        form {
            display: flex;
            flex-direction: column;
        }

        input, textarea {
            margin: 10px 0;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        input[type="file"] {
            padding: 5px;
        }

        button {
            padding: 10px;
            background-color: #3498db;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        button:hover {
            background-color: #2670b2;
        }

        .view-button {
            text-align: center;
            margin-top: 20px;
        }

        /* Increase the font size and height of the "Title" and "Description" input fields */
        input[type="text"][placeholder="Title"],
        textarea[placeholder="Description"] {
            font-size: 18px;
            line-height: 1.5;
            width:97%;
        }
    </style>
</head>
<body>
    <header>
        <h1>Share Your Problems</h1>
    </header>
    <div class="container">
        <form>
            <h2>Enter Student Details</h2>
            <form>
                <input type="text" placeholder="Student's Name" name="studentName">
                <input type="text" placeholder="Hall Ticket Number" name="hallTicketNumber">
                <input type="text" placeholder="Class" name="studentClass">
                <input type="text" placeholder="Section" name="studentSection">
            </form>
            <!-- Larger "Title" and "Description" input fields -->
            <input type="text" placeholder="Title" required>
            <div>
                <textarea placeholder="Description" required></textarea>
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const contentForm = document.getElementById("contentForm");
            const titleField = document.getElementById("titleField");
            const descriptionField = document.getElementById("descriptionField");

            contentForm.addEventListener("submit", function (e) {
                e.preventDefault(); // Prevent the default form submission

                // Validate the form fields
                if (titleField.value.trim() === "") {
                    alert("Please enter a title.");
                    return;
                }

                if (descriptionField.value.trim() === "") {
                    alert("Please enter a description.");
                    return;
                }

                // If the form is valid, you can submit it to your server here
                // You can use XMLHttpRequest or Fetch API to send the data to your server
                // Example using Fetch API:
                fetch("your_server_url_here", {
                    method: "POST",
                    body: new FormData(contentForm),
                })
                    .then(response => response.json())
                    .then(data => {
                        // Handle the response from the server, e.g., show a success message
                        alert("Form submitted successfully");
                    })
                    .catch(error => {
                        alert("An error occurred while submitting the form.");
                    });
            });
        });
    </script>
</body>
</html>
